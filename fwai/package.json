{
  "name": "fwai",
  "version": "0.1.0",
  "description": "Firmware AI CLI — AI-assisted firmware development with safety guardrails and evidence traceability",
  "type": "module",
  "bin": {
    "fwai": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/cli.js",
    "./lib": "./dist/lib.js"
  },
  "scripts": {
    "build": "tsc",
    "deploy": "tsc && cp -r src/* /home/ateam/workspace/fwcoding/fwai/src/ && cp -r dist/* /home/ateam/workspace/fwcoding/fwai/dist/ && echo '✓ Deployed to global fwai'",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "lint": "npx tsc --noEmit && eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "npx tsx --test tests/unit/*/*.test.ts",
    "test:watch": "npx tsx --test --watch tests/unit/*/*.test.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'"
  },
  "keywords": [
    "firmware",
    "embedded",
    "ai",
    "cli",
    "stm32",
    "esp32",
    "nrf"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "commander": "^13.1.0",
    "minimatch": "^10.2.3",
    "openai": "^4.85.0",
    "ora": "^8.2.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
